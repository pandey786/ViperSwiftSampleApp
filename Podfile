# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'


def project_pods
    
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    pod 'Alamofire', '~> 4.5'
    pod 'AlamofireObjectMapper', '~> 5.0'
    pod 'PKHUD', '~> 5.0'
    pod 'Kingfisher', '~> 4.0'
    
end

# Pods for ViperSwiftSampleApp
target 'ViperSwiftSampleApp' do
    
    project_pods
    
end


 # Pods for testing
target 'ViperSwiftSampleAppTests' do
    
    inherit! :search_paths
    project_pods
    
end

 # Pods for UI testing
target 'ViperSwiftSampleAppUITests' do
    
    inherit! :search_paths
    project_pods
    
end
